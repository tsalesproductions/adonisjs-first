<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>AdonisJS - A fully featured web framework for Node.js</title>
  <link href="https://fonts.googleapis.com/css?family=Poppins:400,500&display=swap" rel="stylesheet">
 
</head>
<body>

  <main>
    @if (flashMessages.has('notification'))
      <div class="text-danger mb-3 mt-3 text-center small">{{ flashMessages.get('notification') }}</div>
    @endif
    <form action="{{ route('AuthController.login') }}" method="POST">
      {{ csrfField() }}
      <div class="mb-3">
        <input class="form-control {{ flashMessages.get('errors.email') ? 'is-invalid' : '' }}" type="email" name="email" autocomplete="on" placeholder="E-mail" value="{{ flashMessages.get('email') || '' }}"/>
      </div>
      <div class="mb-3">
        <input class="form-control {{ flashMessages.get('errors.password') ? 'is-invalid' : '' }}" type="password" name="password" autocomplete="on" placeholder="Senha de acesso" value="{{ flashMessages.get('password') || '' }}"/>
      </div>
      <div class="mb-3">
        <button class="btn btn-primary d-block w-100 mt-3" type="submit" name="submit">Acessar conta</button>
      </div>
    </form>
  </main>
</body>
</html>
